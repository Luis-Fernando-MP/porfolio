    "lucide-react": "0.475.0",
    "next": "15.1.7",
    "nextjs-toploader": "3.7.15",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hot-toast": "2.5.2",
    "sass": "1.85.0",
    "usehooks-ts": "3.1.1",
    "zustand": "5.0.3"
